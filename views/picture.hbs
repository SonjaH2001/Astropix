<h1>{{apod.title}}</h1>


{{#if apod.is_image }}
    <img src="{{ apod.url }}">
{{else}}
    <p>Today's picture
    <a href="{{ apod.url }}">Please click here to view</a></p>
    {{/if}}

<p>{{ apod.credit}}</p>
<p>{{ apod.explanation }}</p>
